    <EditText
        android:id="@+id/inputTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Tambahkan tugas"
        android:background="@drawable/custom_input"
        android:gravity="center"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/submit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/submit"
        app:layout_constraintBottom_toTopOf="@id/inputTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/send"
        />

    <ImageView
        android:id="@+id/calendar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/calendar__1_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/inputTitle"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/tenggat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tetapkan tenggat waktu"
        app:layout_constraintLeft_toRightOf="@+id/calendar"
        app:layout_constraintTop_toTopOf="@+id/calendar"
        app:layout_constraintBottom_toBottomOf="@+id/calendar"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
